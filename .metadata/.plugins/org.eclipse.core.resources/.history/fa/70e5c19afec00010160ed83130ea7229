package dao;

import java.sql.Connection;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

import model.User;

public class UserDAO {
	
	// ログイン
	public User findUser(String userId, String password) { // () 内は検索条件
		// 見つかった User を表す User オブジェクトを返す
		String sql = "SELECT * FROM user_table WHERE user_id = ? AND password = ?";
		// 入力された userid と password を登録された user_table から検索
		
		// try-with-resources で処理後に自動で con と ps をクローズする
		try(Connection con = DBConnection.getConnection(); // DB 接続
				PreparedStatement ps = con.prepareStatement(sql)) { // SQL 文を実行するためのオブジェクト
			ps.setString(1, userId);
			ps.setString(2, password);
			ResultSet rs = ps.executeQuery();
			// exwxuteQuery() SELECT 用のメソッド、結果に ResultSet を返す
			if(rs.next()) { // 検索結果の 1 行目へ移動、存在すれば True
				return new User(rs.getString("user_id"), rs.getString("password"), rs.getString("user_name"));
				// カラム名を指定すると値を取り出せる、その値で User クラスのインスタンスを作って返す
			}
		} catch(Exception e) {
			e.printStackTrace();
		} return null; // 見つからない場合 null を返す
	}
	
	// 新規ユーザー登録
	public boolean inserUser(User user) { // User 型のオブジェクトを受け取る
		String sql = "INSERT INTO user_table (user_id, password, user_name) VALUES (?, ?, ?)";
		// 入力された user_id, password, user_name を user_table に追加
		try(Connection con = DBConnection.getConnection(); 
				PreparedStatement ps = con.prepareStatement(sql)) { 
			ps.setString(1, user.getUserId());
			ps.setString(2, user.getPassword());
			ps.setString(3, user.getUserName());
			return ps.executeUpdate() > 0;  // 0 は成功で True を返す
			// executeUpdate() は SQL の INSERT / UPDATE / DELETE で使うメソッド
		} catch(Exception e) { // 例外処理
			e.printStackTrace();
		} return false; // 登録に失敗したら false を返す
	}
	
	// パスワード変更の際の確認
	public boolean verifyUser(String userId, String userName) {
		String sql = "SELECT * FROM user_table WHERE user_id = ? AND user_name = ?";
		try(Connection con = DBConnection.getConnection();
				PreparedStatement ps = con.prepareStatement(sql)) {
			ps.setString(1, userId);
			ps.setString(2, userName);
			ResultSet rs = ps.executeQuery();
			return rs.next();
		} catch(Exception e) {
			e.printStackTrace();
		} return false;
		
	}
}
